{
  "name": "migrations-lib",
  "version": "1.0.0-next.1",
  "author": "Simple Organization",
  "scripts": {
    "build": "tsc && rollup -c && tsx esbuild.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "playwright test",
    "prepack": "pnpm build"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.4",
    "@playwright/test": "^1.46.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.5.1",
    "better-sqlite3": "^11.2.1",
    "chokidar": "^3.6.0",
    "esbuild": "^0.23.1",
    "prettier": "^3.3.3",
    "rollup": "^4.21.2",
    "rollup-plugin-dts": "^6.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./better-sqlite3": {
      "types": "./better-sqlite3/index.d.ts",
      "default": "./better-sqlite3/index.js"
    },
    "./pglite": {
      "types": "./pglite/index.d.ts",
      "default": "./pglite/index.js"
    }
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "pglite/index.d.ts",
    "pglite/index.js",
    "better-sqlite3/index.js",
    "better-sqlite3/index.d.ts"
  ]
}
